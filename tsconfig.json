{
    "compilerOptions": {
      "target": "esnext",
      "lib": ["dom", "esnext"],
      "jsx": "react",
      "allowJs": true,
      "module": "esnext",
      "moduleResolution": "node",
      "isolatedModules": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["./src/**/*", "jest.config.ts"]
  }